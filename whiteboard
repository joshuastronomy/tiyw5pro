const words = fs.readFileSync("/usr/share/dict/words", "utf-8").toLowerCase().split("\n");

let randWord = words[Math.floor(Math.random() * words.length)];

let gameArr = [];

for (idx = 0; idx < randWord.length; idx++) {
  gameArr.push("_");
}

let wordArr = randWord.split("");

